    <div id="toast-container"></div>

    <script>
        // --- Core Data Management (Simulating DB with localStorage) ---
        const DB_KEY = 'kib_pro_db';
        let currentUser = null;

        function getDB() {
            const defaultDB = { bookings: [], swaps: [], dateStr: new Date().toDateString() };
            let db = JSON.parse(localStorage.getItem(DB_KEY));
            // Reset DB if it's a new day
            if (!db || db.dateStr !== new Date().toDateString()) {
                db = defaultDB;
                localStorage.setItem(DB_KEY, JSON.stringify(db));
            }
            return db;
        }

        function saveDB(db) {
            localStorage.setItem(DB_KEY, JSON.stringify(db));
            renderDashboard(); // Update local screen
        }

        // Listen for changes from other tabs (Real-time sync)
        window.addEventListener('storage', (e) => {
            if (e.key === DB_KEY && currentUser) {
                renderDashboard();
                checkNotifications();
            }
        });

        // --- Helpers ---
        function timeToMins(timeStr) {
            const [h, m] = timeStr.split(':').map(Number);
            return h * 60 + m;
        }

        function minsToTime(mins) {
            const h = Math.floor(mins / 60).toString().padStart(2, '0');
            const m = (mins % 60).toString().padStart(2, '0');
            return `${h}:${m}`;
        }

        function showToast(message, type = 'info') {
            const container = document.getElementById('toast-container');
            const toast = document.createElement('div');
            toast.className = 'toast';
            toast.innerHTML = `<span>${message}</span>`;
            if(type === 'error') toast.style.borderLeftColor = 'var(--danger)';
            if(type === 'success') toast.style.borderLeftColor = 'var(--success)';
            
            container.appendChild(toast);
            setTimeout(() => toast.remove(), 5000);
        }

        // --- Auth ---
        function login() {
            const name = document.getElementById('login-name').value;
            const shiftStr = document.getElementById('login-shift').value;

            if (!name || !shiftStr) {
                showToast("Please select your name and shift time.", "error");
                return;
            }

            const startMins = timeToMins(shiftStr);
            const endMins = startMins + (8 * 60); // Assuming 8 hour shift

            currentUser = { name, shiftStr, startMins, endMins };
            
            document.getElementById('login-view').style.display = 'none';
            document.getElementById('dashboard-view').classList.add('active-view');
            document.getElementById('user-controls').style.display = 'flex';
            document.getElementById('header-user-name').innerText = name;
            document.getElementById('ui-shift-hours').innerText = `${shiftStr} - ${minsToTime(endMins)}`;

            populateDropdowns();
            renderDashboard();
            startClocks();
        }

        function logout() {
            currentUser = null;
            location.reload();
        }

        // --- Core Logic ---
        function bookBreak() {
            const timeStr = document.getElementById('book-time').value;
            const duration = parseInt(document.getElementById('book-duration').value);

            if (!timeStr) return showToast("Please select a time.", "error");

            const breakStart = timeToMins(timeStr);
            const breakEnd = breakStart + duration;
            let db = getDB();

            // Validation 1: Within shift bounds & 15 min rule
            if (breakStart < (currentUser.startMins + 15) || breakEnd > (currentUser.endMins - 15)) {
                return showToast("Cannot book in the first or last 15 minutes of your shift, or outside shift hours.", "error");
            }

            // Validation 2: Balance check
            const userBookings = db.bookings.filter(b => b.user === currentUser.name);
            const usedMins = userBookings.reduce((sum, b) => sum + b.duration, 0);
            if (usedMins + duration > 60) {
                return showToast(`Insufficient balance. You only have ${60 - usedMins} mins left.`, "error");
            }

            // Validation 3: Concurrency check (Max 2 agents)
            const overlapping = db.bookings.filter(b => {
                const bStart = b.startMins;
                const bEnd = b.startMins + b.duration;
                // Overlap formula
                return Math.max(breakStart, bStart) < Math.min(breakEnd, bEnd);
            });

            if (overlapping.length >= 2) {
                return showToast("Time slot full! Max 2 agents allowed.", "error");
            }

            // Prevent self-overlap
            if (overlapping.some(b => b.user === currentUser.name)) {
                return showToast("You already have a break during this time.", "error");
            }

            // Save
            db.bookings.push({
                id: Date.now().toString(),
                user: currentUser.name,
                timeStr,
                startMins: breakStart,
                duration
            });

            saveDB(db);
            showToast("Break booked successfully!", "success");
            document.getElementById('book-time').value = '';
        }

        // --- Swap Logic ---
        function sendSwapRequest() {
            const targetUser = document.getElementById('swap-agent-select').value;
            const slotId = document.getElementById('swap-slot-select').value;

            if (!targetUser || !slotId) return showToast("Select an agent and a break slot.", "error");

            let db = getDB();
            
            // Check if request already exists
            if (db.swaps.some(s => s.slotId === slotId && s.status === 'pending')) {
                return showToast("A pending swap request already exists for this slot.", "error");
            }

            db.swaps.push({
                id: Date.now().toString(),
                from: currentUser.name,
                to: targetUser,
                slotId: slotId,
                status: 'pending'
            });

            saveDB(db);
            showToast(`Swap request sent to ${targetUser}.`, "success");
        }

        function handleSwap(swapId, action) {
            let db = getDB();
            const swapIndex = db.swaps.findIndex(s => s.id === swapId);
            if (swapIndex === -1) return;

            const swap = db.swaps[swapIndex];
            
            if (action === 'accept') {
                // Find the booking and change owner
                const bookingIndex = db.bookings.findIndex(b => b.id === swap.slotId);
                if (bookingIndex !== -1) {
                    db.bookings[bookingIndex].user = currentUser.name; // Take ownership
                    showToast("Swap accepted. The break is now yours.", "success");
                }
            } else {
                showToast("Swap request rejected.", "info");
            }

            // Remove request
            db.swaps.splice(swapIndex, 1);
            saveDB(db);
        }

        // --- UI Rendering ---
        function renderDashboard() {
            if (!currentUser) return;
            const db = getDB();

            // Update Balance
            const userBookings = db.bookings.filter(b => b.user === currentUser.name);
            const usedMins = userBookings.reduce((sum, b) => sum + b.duration, 0);
            document.getElementById('ui-used').innerHTML = `${usedMins} <span style="font-size:14px; color:var(--text-muted)">Mins</span>`;
            document.getElementById('ui-balance').innerHTML = `${60 - usedMins} <span style="font-size:14px; color:var(--text-muted)">Mins</span>`;

            // Update Timeline
            const tbody = document.getElementById('timeline-body');
            tbody.innerHTML = '';
            
            // Sort chronologically
            const sortedBookings = [...db.bookings].sort((a, b) => a.startMins - b.startMins);
            
            sortedBookings.forEach(b => {
                const isMe = b.user === currentUser.name;
                const endStr = minsToTime(b.startMins + b.duration);
                tbody.innerHTML += `
                    <tr style="${isMe ? 'background: #f0f7ff;' : ''}">
                        <td style="font-weight: ${isMe ? 'bold' : 'normal'}">${b.user} ${isMe ? '(You)' : ''}</td>
                        <td>${b.timeStr} - ${endStr}</td>
                        <td>${b.duration} mins</td>
                        <td><span class="badge badge-active">Approved</span></td>
                    </tr>
                `;
            });

            // Update Swap My Slots Dropdown
            const slotSelect = document.getElementById('swap-slot-select');
            slotSelect.innerHTML = '<option value="">-- Select Your Booking --</option>';
            userBookings.forEach(b => {
                slotSelect.innerHTML += `<option value="${b.id}">${b.timeStr} (${b.duration} mins)</option>`;
            });

            // Update Swap Inbox
            const inbox = document.getElementById('swap-inbox-container');
            inbox.innerHTML = '';
            const myPendingSwaps = db.swaps.filter(s => s.to === currentUser.name && s.status === 'pending');
            
            if (myPendingSwaps.length === 0) {
                inbox.innerHTML = `<p style="font-size: 13px; color: var(--text-muted); text-align: center;">No pending requests</p>`;
            } else {
                myPendingSwaps.forEach(s => {
                    // Find slot details
                    const slot = db.bookings.find(b => b.id === s.slotId);
                    if(slot) {
                        inbox.innerHTML += `
                            <div class="swap-item">
                                <strong>${s.from}</strong> wants to give you their break at <strong>${slot.timeStr}</strong> (${slot.duration} mins).
                                <div class="swap-actions">
                                    <button class="btn-sm btn-accept" onclick="handleSwap('${s.id}', 'accept')">Accept</button>
                                    <button class="btn-sm btn-reject" onclick="handleSwap('${s.id}', 'reject')">Reject</button>
                                </div>
                            </div>
                        `;
                    }
                });
            }

            renderLiveAgents(db);
        }

        function renderLiveAgents(db) {
            const container = document.getElementById('live-agents-container');
            container.innerHTML = '';
            
            const now = new Date();
            const currentMins = now.getHours() * 60 + now.getMinutes();

            const liveAgents = db.bookings.filter(b => currentMins >= b.startMins && currentMins < (b.startMins + b.duration));

            if (liveAgents.length === 0) {
                container.innerHTML = `<div class="agent-item empty">All agents are available</div>`;
            } else {
                liveAgents.forEach(b => {
                    container.innerHTML += `
                        <div class="agent-item">
                            <span style="font-weight: 600;">${b.user}</span>
                            <span class="badge badge-pending">Returns at ${minsToTime(b.startMins + b.duration)}</span>
                        </div>
                    `;
                });
            }
        }

        function populateDropdowns() {
            // Get all names from login select to populate swap target select
            const allOptions = Array.from(document.getElementById('login-name').options);
            const swapSelect = document.getElementById('swap-agent-select');
            swapSelect.innerHTML = '<option value="">-- Select Agent --</option>';
            
            allOptions.forEach(opt => {
                if(opt.value && opt.value !== currentUser.name) {
                    swapSelect.innerHTML += `<option value="${opt.value}">${opt.value}</option>`;
                }
            });
        }

        // --- Clocks & Notifications ---
        let lastNotifiedMins = -1;
        function startClocks() {
            setInterval(() => {
                const now = new Date();
                document.getElementById('realtime-clock').innerText = now.toLocaleTimeString('en-US', { hour12: false });
                
                // Every minute check
                const currentMins = now.getHours() * 60 + now.getMinutes();
                if (currentMins !== lastNotifiedMins) {
                    lastNotifiedMins = currentMins;
                    renderLiveAgents(getDB()); // Refresh live status
                    checkNotifications(currentMins);
                }
            }, 1000);
        }

        function checkNotifications(currentMins) {
            if(!currentUser) return;
            const db = getDB();
            
            db.bookings.forEach(b => {
                if (b.user === currentUser.name) {
                    if (b.startMins === currentMins) {
                        showToast("üîî Your break starts NOW!", "success");
                    }
                    if ((b.startMins + b.duration) === currentMins) {
                        showToast("‚è∞ Break time is over. Please return to work.", "error");
                    }
                }
            });
        }

    </script>
</body>
</html>
